{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "allowImportingTsExtensions": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "public/js/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}