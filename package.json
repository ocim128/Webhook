{
  "name": "webhook",
  "version": "1.0.0",
  "description": "Local webhook capture service with dynamic, user-defined endpoints.",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently -n \"server,client\" -c \"blue,green\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon",
    "dev:client": "vite",
    "build": "tsc && npm run build:client",
    "build:client": "vite build",
    "preview:client": "vite preview",
    "typecheck": "tsc --noEmit",
    "typecheck:client": "tsc --project tsconfig.frontend.json --noEmit",
    "typecheck:all": "npm run typecheck && npm run typecheck:client"
  },
  "keywords": [
    "webhook",
    "express",
    "local"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "mongodb": "^7.0.0",
    "nanoid": "^5.1.6",
    "raw-body": "^3.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.1.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}